object Hanoi
	
  def solve(n : Int(32)) : Int(32) :=
    if (n < 1) then 
      error("can't solve Hanoi for less than 1 plate")
    else
      if (n == 1) then
        1
      else
        2 * solve(n - 1) + 1
      end if
    end if
  end solve

  Std.printString("Hanoi for 4 plates: " ++ Std.intToString(solve(4)))
end Hanoi